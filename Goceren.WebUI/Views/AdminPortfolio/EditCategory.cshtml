@model Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kategori Düzenle</h1>
            </div>
        </div>
    </div>
</section>
<form asp-controller="AdminPortfolio" asp-action="EditCategory" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CategoryId" />
    <section class="content p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Detaylar</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CategoryName">Kategori Adı</label>
                            <input asp-for="CategoryName" type="text" class="form-control">
                            <span class="text-danger" asp-validation-for="CategoryName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryType">Kategori Tipi</label>
                            <input asp-for="CategoryType" readonly="readonly" value="Github" class="form-control">
                            <span class="text-danger" asp-validation-for="CategoryType"></span>
                        </div>
                        <div class="form-group">
                            <label>Durum</label>
                            <div class="custom-control custom-checkbox">
                                <input asp-for="isApproved" class="custom-control-input" type="checkbox">
                                <label asp-for="isApproved" class="custom-control-label">Aktif</label>
                                <span class="text-danger" asp-validation-for="isApproved"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-12">
                <a asp-controller="AdminPortfolio" asp-action="Categories" class="btn btn-danger btn-lg">Vazgeç</a>
                <input type="submit" value="Kaydet" class="btn btn-success float-right btn-lg">
            </div>
        </div>
    </section>
</form>
