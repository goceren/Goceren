@model IEnumerable<UserModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kullanıcılar</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Liste</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 15%">
                            ID
                        </th>
                        <th style="width: 10%">
                            Kullanıcı Adı
                        </th>
                        <th style="width: 10%">
                            Email
                        </th>
                        <th style="width: 10%">
                            Telefon
                        </th>
                        <th style="width: 10%; text-align:center;">
                            Rolü
                        </th>
                        <th style="width: 10%; text-align:center;">
                            Email Onayı
                        </th>
                        <th class="text-center" style="width: 10%">

                        </th>
                    </tr>
                </thead>

                <tbody class="form-group">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a>@item.ID</a>
                                </td>
                                <td>
                                    <a>
                                        @item.UserName
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @item.Email
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @item.Phone
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a>
                                        @item.RoleId
                                    </a>
                                </td>
                                <td class="project-state">
                                    @if (item.Confirmed)
                                    {
                                        <span class="badge badge-success text-center">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger text-center">Pasif</span>
                                    }
                                </td>
                                <td class="project-actions text-center">
                                    <a class="btn btn-info btn-sm" asp-controller="AdminManageUser" asp-action="EditUser" asp-route-userName="@item.UserName">
                                        <i class="fas fa-edit">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="AdminManageUser" asp-action="Delete" asp-route-userName="@item.UserName">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
