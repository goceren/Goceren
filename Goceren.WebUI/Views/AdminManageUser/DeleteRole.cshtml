@model GetRoleModel
@{
    ViewData["Title"] = "DeleteRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@if (Model != null)
{
    <div class="container pt-5">
        <div class="card">
            <div class="card-header">
                Emin misiniz?
            </div>
            <div class="card-body">
                <h5 class="card-title"><b>"@Model.Name"</b> başlıklı rolü silmek istediğinizden emin misiniz ? </h5>
                <p class="card-text"></p>
                <br />
                <form class="text-right" asp-controller="AdminManageUser" asp-action="DeleteRole" method="post">
                    <a type="button" class="btn btn-primary mr-2" asp-controller="AdminManageUser" asp-action="Role">Vazgeç</a>
                    <input type="hidden" name="roleId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Silmeyi Onaylıyorum</button>
                </form>
            </div>
        </div>
    </div>
}


