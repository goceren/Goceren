@model IEnumerable<GetRoleModel>
@{
    ViewData["Title"] = "Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Roller</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Liste</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 15%">
                            ID
                        </th>
                        <th style="width: 10%">
                            Rol Adı
                        </th>
                        <th class="text-center" style="width: 10%">
                            <a class="btn btn-primary btn-sm text-center" asp-controller="AdminManageUser" asp-action="CreateRole">
                                <i class="fas fa-plus">
                                </i>
                                Yeni Ekle
                            </a>
                        </th>
                    </tr>
                </thead>

                <tbody class="form-group">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a>@item.Id</a>
                                </td>
                                <td>
                                    <a>
                                        @item.Name
                                    </a>
                                </td>
                                <td class="project-actions text-center">
                                    <a class="btn btn-info btn-sm" asp-controller="AdminManageUser" asp-action="EditRole" asp-route-roleId="@item.Id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="AdminManageUser" asp-action="DeleteRole" asp-route-roleId="@item.Id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

