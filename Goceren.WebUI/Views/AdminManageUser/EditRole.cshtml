@model GetRoleModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Rol Güncelle</h1>
            </div>
        </div>
    </div>
</section>
<form asp-controller="AdminManageUser" asp-action="EditRole" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id"/>
    <section class="content p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Detaylar</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name">Rol Adı</label>
                            <input asp-for="Name" type="text" class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-12">
                <a asp-controller="AdminManageUser" asp-action="Role" class="btn btn-danger btn-lg">Vazgeç</a>
                <input type="submit" value="Kaydet" class="btn btn-success float-right btn-lg">
            </div>
        </div>
    </section>
</form>
