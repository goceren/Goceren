@model WhatIDo
@{
    ViewData["Title"] = "AddWhatIDo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Ne Yapıyorum Ekle</h1>
            </div>
        </div>
    </div>
</section>
<form asp-controller="Admin" asp-action="AddWhatIDo" method="post" enctype="multipart/form-data">
    <section class="content p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Detaylar</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="WhatIDoTitle">Sayfa Başlığı</label>
                            <input asp-for="WhatIDoTitle" type="text" class="form-control">
                            <span class="text-danger" asp-validation-for="WhatIDoTitle"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title1">Başlık 1</label>
                            <input asp-for="Title1" class="form-control">
                            <span class="text-danger" asp-validation-for="Title1"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description1">Açıklama 1</label>
                            <textarea asp-for="Description1" class="form-control" rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="Description1"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title2">Başlık 2</label>
                            <input asp-for="Title2" class="form-control">
                            <span class="text-danger" asp-validation-for="Title2"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description2">Açıklama 2</label>
                            <textarea asp-for="Description2" class="form-control" rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="Description2"></span>
                        </div>
                        <div class="form-group">
                            <label>Durum</label>
                            <div class="custom-control custom-checkbox">
                                <input asp-for="isApproved" class="custom-control-input" type="checkbox">
                                <label asp-for="isApproved" class="custom-control-label">Aktif</label>
                                <span class="text-danger" asp-validation-for="isApproved"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-12">
                <a asp-controller="Admin" asp-action="WhatIDo" class="btn btn-danger btn-lg">Vazgeç</a>
                <input type="submit" value="Kaydet" class="btn btn-success float-right btn-lg">
            </div>
        </div>
    </section>
</form>

