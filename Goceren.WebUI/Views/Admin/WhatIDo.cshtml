@model IEnumerable<WhatIDo>
@{
    ViewData["Title"] = "WhatIDo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Ne Yapıyorum ?</h1>
            </div>
        </div>
    </div>
</section>
@if (Model != null)
{
    if (ViewBag.alert)
    {
        if (ViewBag.items < 2)
        {
            <div class="alert alert-danger">
                2 tane <b>Aktif "What I Do"</b> olmalıdır.
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                İkiden fazla <b>Aktif "What I Do"</b> olmamalıdır.
            </div>
        }
    }
}
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Liste</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            ID
                        </th>
                        <th style="width: 15%">
                            Ana Başlık
                        </th>
                        <th style="width: 20%">
                            Alt Başlık 1
                        </th>
                        <th style="width: 20%">
                            Açıklama 1
                        </th>
                        <th style="width: 10%">
                            Alt Başlık 2
                        </th>
                        <th style="width: 10%">
                            Açıklama 2
                        </th>
                        <th style="width: 8%" class="text-center">
                            Durum
                        </th>
                        <th class="text-center" style="width: 15%">
                            <a class="btn btn-primary btn-sm text-center" asp-controller="Admin" asp-action="AddWhatIDo">
                                <i class="fas fa-plus">
                                </i>
                                Yeni Ekle
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a>@item.WhatIDoId</a>
                                </td>
                                <td>
                                    <a>
                                        @item.WhatIDoTitle
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @if (item.Title1.Length < 25)
                                        {
                                            @: @item.Title1
                                        }
                                        else
                                        {
                                            @: @item.Title1.Substring(0, 25)
                                        }
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @if (item.Description1.Length < 25)
                                        {
                                            @: @item.Description1
                                        }
                                        else
                                        {
                                            @: @item.Description1.Substring(0, 25)
                                        }
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @if (item.Title2.Length < 25)
                                        {
                                            @: @item.Title2
                                        }
                                        else
                                        {
                                            @: @item.Title2.Substring(0, 25)
                                        }
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @if (item.Description2.Length < 25)
                                        {
                                            @: @item.Description2
                                        }
                                        else
                                        {
                                            @: @item.Description2.Substring(0, 25)
                                        }
                                    </a>
                                </td>
                                <td class="project-state">
                                    @if (item.isApproved)
                                    {
                                        <span class="badge badge-success text-center">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger text-center">Pasif</span>
                                    }
                                </td>
                                <td class="project-actions text-center">
                                    <a class="btn btn-info btn-sm" asp-controller="Admin" asp-action="EditWhatIDo" asp-route-whatidoId="@item.WhatIDoId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="DeleteWhatIDo" asp-route-whatidoId="@item.WhatIDoId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


