                                <h3>@Model.LeftTopTitle</h3>
                            </div>
                            <div class="timeline timeline-second-style bs-30 clearfix">
                                @if (Model.Educations != null)
                                {
                                    @await Html.PartialAsync("_Educations", Model.Educations.Where(i => i.isApproved == true))
                                }
                            </div>
                            <div class="block-title">
                                <h3>@Model.LeftBottomTitle<span></span></h3>
                            </div>
                            <div class="timeline timeline-second-style clearfix">
                                @if (Model.Experiences != null)
                                {
                                    @await Html.PartialAsync("_Experiences", Model.Experiences.Where(i => i.isApproved == true))
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="col-inner">
                            <div class="block-title">
                                <h3>@Model.RightTopTitle<span></span></h3>
                            </div>
                            <div class="skills-info skills-second-style">
                                @if (Model.Skills != null)
