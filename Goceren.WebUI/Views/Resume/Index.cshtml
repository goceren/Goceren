@model Resumepage
@{
    ViewData["Title"] = "Resume";
}
@if (Model != null)
{
    <section class="pt-page pt-page-current">
        <div class="section-inner custom-page-content">
            <div class="section-title-block second-style">
                <h2 class="section-title">@Model.ResumepageTitle</h2>
                <h5 class="section-description">@Model.Subtitle</h5>
            </div>

