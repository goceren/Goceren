@model MenuType
@{
    ViewData["Title"] = "DeleteMenuType";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (Model != null)
{
    <div class="container pt-5">
        <div class="card">
            <div class="card-header">
                Emin misiniz?
            </div>
            <div class="card-body">
                <h5 class="card-title">ID : <b>"@Model.MenuTypeId"</b> - <b>"@Model.MenuTypeName"</b> adlı öğeyi silmek istediğinizden emin misiniz ? </h5>
                <p class="card-text"></p>
                <br />
                <form class="text-right" asp-controller="AdminNavbar" asp-action="DeleteMenuType" method="post">
                    <a type="button" class="btn btn-primary mr-2" asp-controller="AdminNavbar" asp-action="MenuTypes" >Vazgeç</a>
                    <input type="hidden" name="menutypeId" value="@Model.MenuTypeId" />
                    <button type="submit" class="btn btn-danger">Silmeyi Onaylıyorum</button>
                </form>
            </div>
        </div>
    </div>
}


