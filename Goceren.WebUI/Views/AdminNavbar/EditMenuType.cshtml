@model MenuType
@{
    ViewData["Title"] = "EditMenuType";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Menu Tipi Güncelle</h1>
            </div>
        </div>
    </div>
</section>
<form asp-controller="AdminNavbar" asp-action="EditMenuType" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MenuTypeId" />
    <section class="content p-3">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Detaylar</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="MenuTypeName">Menü Tipi Adı</label>
                            <input asp-for="MenuTypeName" type="text" class="form-control">
                            <span class="text-danger" asp-validation-for="MenuTypeName"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Kullanan Sayfalar</h3>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 5%">
                                        ID
                                    </th>
                                    <th style="width: 30%">
                                        Başlık
                                    </th>
                                    <th style="width: 30%" class="text-center">
                                        Durum
                                    </th>
                                    <th class="text-center" style="width: 20%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Menus != null)
                                {
                                    @foreach (var item in Model.Menus)
                                    {
                                        <tr>
                                            <td>
                                                <a>@item.MenuId</a>
                                            </td>
                                            <td>
                                                <a>
                                                    @item.MenuName
                                                </a>
                                            </td>
                                            <td class="project-state">
                                                @if (item.isApproved)
                                                {
                                                    <span class="badge badge-success text-center">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger text-center">Pasif</span>
                                                }
                                            </td>
                                            <td class="project-actions text-center">
                                                <a class="btn btn-info btn-sm" asp-controller="AdminNavbar" asp-action="EditMenu" asp-route-menuId="@item.MenuId">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </a>
                                                <a class="btn btn-danger btn-sm" asp-controller="AdminNavbar" asp-action="DeleteConnections" asp-route-menutypeId ="@Model.MenuTypeId" asp-route-menuId="@item.MenuId">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-12">
                <a asp-controller="AdminNavbar" asp-action="MenuTypes" class="btn btn-danger btn-lg">Vazgeç</a>
                <input type="submit" value="Kaydet" class="btn btn-success float-right btn-lg">
            </div>
        </div>
    </section>
</form>


