@model Experience
@{
    ViewData["Title"] = "DeleteExperience";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (Model != null)
{
    <div class="container pt-5">
        <div class="card">
            <div class="card-header">
                Emin misiniz?
            </div>
            <div class="card-body">
                <h5 class="card-title">ID : <b>"@Model.ExperienceId"</b> - <b>"@Model.Title"</b> başlıklı öğeyi silmek istediğinizden emin misiniz ? </h5>
                <p class="card-text"></p>
                <br />
                <form class="text-right" asp-controller="AdminResume" asp-action="DeleteExperience" method="post">
                    <a type="button" class="btn btn-primary mr-2" asp-controller="AdminResume" asp-action="Experiences">Vazgeç</a>
                    <input type="hidden" name="experienceId" value="@Model.ExperienceId" />
                    <button type="submit" class="btn btn-danger">Silmeyi Onaylıyorum</button>
                </form>
            </div>
        </div>
    </div>
}


