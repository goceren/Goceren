@model Resumepage
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (Model != null)
{
    <div class="container pt-5">
        <div class="card">
            <div class="card-header">
                Emin misiniz?
            </div>
            <div class="card-body">
                <h5 class="card-title">ID : <b>"@Model.ResumepageId"</b> - <b>"@Model.ResumepageTitle"</b> başlıklı öğeyi silmek istediğinizden emin misiniz ? </h5>
                <br />
                <p class="card-text text-danger">Eğer Silerseniz buna bağlı olan Yetenekler, Eğitimler ve Tecrübeler pasif kalacaktır.</p>
                <br />
                <form class="text-right" asp-controller="AdminResume" asp-action="Delete" method="post">
                    <a type="button" class="btn btn-primary mr-2" asp-controller="AdminResume" asp-action="Index">Vazgeç</a>
                    <input type="hidden" name="resumepageId" value="@Model.ResumepageId" />
                    <button type="submit" class="btn btn-danger">Silmeyi Onaylıyorum</button>
                </form>
            </div>
        </div>
    </div>
}

