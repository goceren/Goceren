@model IEnumerable<Education>
@{
    ViewData["Title"] = "Educations";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Eğitim Bilgileri</h1>
            </div>
        </div>
    </div>
</section>
@if (Model != null)
{
    if (ViewBag.alert)
    {
        if (ViewBag.items < 1)
        {
            <div class="alert alert-danger">
                Hiç <b>Aktif Eğitim Bilgisi</b> yok.
            </div>
        }
    }
}
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Liste</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            ID
                        </th>
                        <th style="width: 15%">
                            Başlık
                        </th>
                        <th style="width: 20%">
                            Açıklama
                        </th>
                        <th style="width: 15%">
                            Eğitim Tipi
                        </th>
                        <th style="width: 10%">
                            Tarih
                        </th>
                        <th style="width: 15%">
                            Hakkımda Sayfası
                        </th>
                        <th style="width: 8%" class="text-center">
                            Durum
                        </th>
                        <th class="text-center" style="width: 15%">
                            <a class="btn btn-primary btn-sm text-center" asp-controller="AdminResume" asp-action="AddEducation">
                                <i class="fas fa-plus">
                                </i>
                                Yeni Ekle
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a>@item.EducationId</a>
                                </td>
                                <td>
                                    <a>@item.Title</a>
                                </td>
                                <td>
                                    <a>
                                        @if (item.Description.Length < 45)
                                        {
                                            @: @item.Description
                                        }
                                        else
                                        {
                                            @: @item.Description.Substring(0, 45)
                                        }
                                    </a>
                                </td>
                                <td>
                                    <a>@item.EducationType</a>
                                </td>
                                <td>
                                    <a>@item.Date</a>
                                </td>
                                <td>
                                    <a>
                                        @if (item.Resumepage != null)
                                        {
                                            @item.Resumepage.ResumepageTitle
                                        }
                                    </a>
                                </td>
                                <td class="project-state">
                                    @if (item.isApproved)
                                    {
                                        <span class="badge badge-success text-center">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger text-center">Pasif</span>
                                    }
                                </td>
                                <td class="project-actions text-center">
                                    <a class="btn btn-info btn-sm" asp-controller="AdminResume" asp-action="EditEducation" asp-route-educationId="@item.EducationId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="AdminResume" asp-action="DeleteEducation" asp-route-educationId="@item.EducationId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>